<!DOCTYPE html>
<html>
  <head>
    <title>ProjectScarlett</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'BW', root_path, method: :get, class: 'navbar-brand' %>
      <%# <a class="navbar-brand" href="">BW</a> %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          
            
          <% end %>
          <% if user_signed_in? && current_user.present? && current_user.profile.present? %>
            <li class="nav-item">
                <%= link_to 'View your Profile', user_profile_path(current_user.profile), class: 'nav-link' %>
            </li>
          <% elsif user_signed_in? && current_user.present? %>
            <li class="nav-item">
                <%= link_to 'Create your Profile', new_user_profile_path, class: 'nav-link' %>
            </li>
          <% else %>
          <% end %>
          


        </ul>
        <% if user_signed_in? %>
        <p class="logged-in">You are currently signed in as <%=current_user.email%>!</p>
        <% end %>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

 

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
    </div>

  <div class="row feature text-center">
    <div id="footer">
    <div class="row feature text-center">
      <div class="container col-12 col-sm">
        <b>Footer here</b>
        <br />
        <%= link_to 'Link', '#'%>
      </div>
      <div class="container col-12 col-sm">
        <b>Made with Love in Phoenix!</b>
        <br />
        <%= link_to 'Link', '#'%>
      </div>
    </div>
    </div>
  </body>
</html>
